{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2022",
    "module": "commonjs",
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
}
